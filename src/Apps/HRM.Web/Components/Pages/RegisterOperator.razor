@page "/operators/register"
@using HRM.Web.Models
@using HRM.Web.Services
@using HRM.Web.Validators
@using FluentValidation
@inject IApiClient ApiClient
@inject IValidator<RegisterOperatorRequest> Validator

<PageTitle>Register Operator - HRM</PageTitle>

<div class="container mt-4">
    <div class="row">
        <div class="col-md-8 offset-md-2">
            <div class="card">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-plus-fill"></i> Register New Operator
                    </h4>
                </div>
                <div class="card-body">
                    @if (!string.IsNullOrEmpty(errorMessage))
                    {
                        <div class="alert alert-danger alert-dismissible fade show" role="alert">
                            <strong>Error!</strong> @errorMessage
                            <button type="button" class="btn-close" @onclick="() => errorMessage = null"></button>
                        </div>
                    }

                    @if (!string.IsNullOrEmpty(successMessage))
                    {
                        <div class="alert alert-success alert-dismissible fade show" role="alert">
                            <strong>Success!</strong> @successMessage
                            <button type="button" class="btn-close" @onclick="() => successMessage = null"></button>
                        </div>
                    }

                    <EditForm Model="@model" OnValidSubmit="HandleValidSubmit">
                        <div class="mb-3">
                            <label for="username" class="form-label">Username *</label>
                            <InputText id="username" class="form-control" @bind-Value="model.Username" placeholder="john.doe" />
                            @if (validationErrors.ContainsKey(nameof(model.Username)))
                            {
                                <div class="text-danger small">@validationErrors[nameof(model.Username)]</div>
                            }
                        </div>

                        <div class="mb-3">
                            <label for="email" class="form-label">Email *</label>
                            <InputText id="email" type="email" class="form-control" @bind-Value="model.Email" placeholder="john.doe@company.com" />
                            @if (validationErrors.ContainsKey(nameof(model.Email)))
                            {
                                <div class="text-danger small">@validationErrors[nameof(model.Email)]</div>
                            }
                        </div>

                        <div class="mb-3">
                            <label for="fullname" class="form-label">Full Name *</label>
                            <InputText id="fullname" class="form-control" @bind-Value="model.FullName" placeholder="John Doe" />
                            @if (validationErrors.ContainsKey(nameof(model.FullName)))
                            {
                                <div class="text-danger small">@validationErrors[nameof(model.FullName)]</div>
                            }
                        </div>

                        <div class="mb-3">
                            <label for="phone" class="form-label">Phone Number</label>
                            <InputText id="phone" class="form-control" @bind-Value="model.PhoneNumber" placeholder="+1234567890" />
                            @if (validationErrors.ContainsKey(nameof(model.PhoneNumber)))
                            {
                                <div class="text-danger small">@validationErrors[nameof(model.PhoneNumber)]</div>
                            }
                        </div>

                        <div class="mb-3">
                            <label for="password" class="form-label">Password *</label>
                            <InputText id="password" type="password" class="form-control" @bind-Value="model.Password" placeholder="Min 8 characters" />
                            @if (validationErrors.ContainsKey(nameof(model.Password)))
                            {
                                <div class="text-danger small">@validationErrors[nameof(model.Password)]</div>
                            }
                            <small class="form-text text-muted">
                                Must be at least 8 characters with uppercase, lowercase, number, and special character.
                            </small>
                        </div>

                        <div class="mb-3">
                            <label for="confirmpassword" class="form-label">Confirm Password *</label>
                            <InputText id="confirmpassword" type="password" class="form-control" @bind-Value="model.ConfirmPassword" />
                            @if (validationErrors.ContainsKey(nameof(model.ConfirmPassword)))
                            {
                                <div class="text-danger small">@validationErrors[nameof(model.ConfirmPassword)]</div>
                            }
                        </div>

                        <div class="d-grid gap-2">
                            <button type="submit" class="btn btn-primary btn-lg" disabled="@isSubmitting">
                                @if (isSubmitting)
                                {
                                    <span class="spinner-border spinner-border-sm me-2" role="status"></span>
                                    <span>Registering...</span>
                                }
                                else
                                {
                                    <span><i class="bi bi-check-circle-fill me-2"></i>Register Operator</span>
                                }
                            </button>
                            <button type="button" class="btn btn-secondary" @onclick="ResetForm" disabled="@isSubmitting">
                                <i class="bi bi-arrow-counterclockwise me-2"></i>Reset Form
                            </button>
                        </div>
                    </EditForm>
                </div>
            </div>

            @if (createdOperator != null)
            {
                <div class="card mt-4">
                    <div class="card-header bg-success text-white">
                        <h5 class="mb-0">
                            <i class="bi bi-check-circle-fill me-2"></i>Operator Created Successfully
                        </h5>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">ID</dt>
                            <dd class="col-sm-9"><code>@createdOperator.Id</code></dd>

                            <dt class="col-sm-3">Username</dt>
                            <dd class="col-sm-9">@createdOperator.Username</dd>

                            <dt class="col-sm-3">Email</dt>
                            <dd class="col-sm-9">@createdOperator.Email</dd>

                            <dt class="col-sm-3">Full Name</dt>
                            <dd class="col-sm-9">@createdOperator.FullName</dd>

                            <dt class="col-sm-3">Phone Number</dt>
                            <dd class="col-sm-9">@(createdOperator.PhoneNumber ?? "N/A")</dd>

                            <dt class="col-sm-3">Status</dt>
                            <dd class="col-sm-9">
                                <span class="badge bg-warning">@createdOperator.Status</span>
                            </dd>

                            <dt class="col-sm-3">Created At</dt>
                            <dd class="col-sm-9">@createdOperator.CreatedAtUtc.ToLocalTime().ToString("yyyy-MM-dd HH:mm:ss")</dd>
                        </dl>

                        <div class="alert alert-info" role="alert">
                            <strong>Next Step:</strong> The operator needs to be activated by an administrator before they can log in.
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@code {
    private RegisterOperatorRequest model = new();
    private Dictionary<string, string> validationErrors = new();
    private string? errorMessage;
    private string? successMessage;
    private bool isSubmitting;
    private OperatorResponse? createdOperator;

    private async Task HandleValidSubmit()
    {
        // Clear previous messages
        errorMessage = null;
        successMessage = null;
        validationErrors.Clear();

        // Validate with FluentValidation
        var validationResult = await Validator.ValidateAsync(model);
        if (!validationResult.IsValid)
        {
            foreach (var error in validationResult.Errors)
            {
                validationErrors[error.PropertyName] = error.ErrorMessage;
            }
            return;
        }

        isSubmitting = true;

        try
        {
            var response = await ApiClient.RegisterOperatorAsync(model);

            if (response.IsSuccess && response.Data != null)
            {
                successMessage = $"Operator '{response.Data.Username}' registered successfully!";
                createdOperator = response.Data;
                ResetForm();
            }
            else
            {
                errorMessage = response.ErrorMessage ?? "Failed to register operator";
            }
        }
        catch (Exception ex)
        {
            errorMessage = $"An unexpected error occurred: {ex.Message}";
        }
        finally
        {
            isSubmitting = false;
        }
    }

    private void ResetForm()
    {
        model = new RegisterOperatorRequest();
        validationErrors.Clear();
        errorMessage = null;
    }
}
