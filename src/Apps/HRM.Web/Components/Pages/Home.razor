@page "/"

<PageTitle>Home - HRM</PageTitle>

<div class="container mt-5">
    <div class="row">
        <div class="col-md-12">
            <h1 class="display-4">Welcome to HRM</h1>
            <p class="lead">Human Resource Management System</p>
            <hr class="my-4">

            <div class="row mt-4">
                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-person-plus-fill"></i> Register Operator
                            </h5>
                            <p class="card-text">
                                Create a new operator account for system administration.
                            </p>
                            <a href="/operators/register" class="btn btn-primary">
                                Register New Operator
                            </a>
                        </div>
                    </div>
                </div>

                <div class="col-md-6">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                <i class="bi bi-list-ul"></i> Operators List
                            </h5>
                            <p class="card-text">
                                View and manage all registered operators.
                            </p>
                            <a href="/operators/list" class="btn btn-secondary disabled">
                                View Operators (Coming Soon)
                            </a>
                        </div>
                    </div>
                </div>
            </div>

            <div class="alert alert-info mt-4" role="alert">
                <h5 class="alert-heading">
                    <i class="bi bi-info-circle-fill"></i> Getting Started
                </h5>
                <p>
                    This is the HRM Web interface for managing operators and system administration tasks.
                </p>
                <hr>
                <p class="mb-0">
                    <strong>Note:</strong> Make sure the HRM.Api is running on
                    <code>http://localhost:5000</code> before using this application.
                </p>
            </div>
        </div>
    </div>
</div>
