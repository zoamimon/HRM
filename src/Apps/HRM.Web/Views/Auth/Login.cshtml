@model LoginRequest

@{
    ViewData["Title"] = "Login";
}

<div class="row justify-content-center">
    <div class="col-md-5">
        <div class="text-center mb-4">
            <h2>Login to HRM System</h2>
            <p class="text-muted">Enter your credentials to access your account</p>
        </div>

        <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

        <form asp-action="Login" method="post" class="needs-validation" novalidate>
            <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

            <div class="mb-3">
                <label asp-for="UsernameOrEmail" class="form-label"></label>
                <input asp-for="UsernameOrEmail"
                       class="form-control form-control-lg"
                       placeholder="Enter your username or email"
                       autofocus />
                <span asp-validation-for="UsernameOrEmail" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="Password" class="form-label"></label>
                <input asp-for="Password"
                       class="form-control form-control-lg"
                       type="password"
                       placeholder="Enter your password" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="mb-3 form-check">
                <input asp-for="RememberMe" class="form-check-input" type="checkbox" />
                <label asp-for="RememberMe" class="form-check-label"></label>
                <div class="form-text">Keep me signed in for 30 days</div>
            </div>

            <div class="d-grid gap-2 mb-3">
                <button type="submit" class="btn btn-primary btn-lg">
                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                </button>
            </div>

            <div class="text-center">
                <p class="text-muted mb-2">Don't have an account?</p>
                <a asp-controller="Operator" asp-action="Register" class="btn btn-outline-secondary">
                    <i class="bi bi-person-plus me-2"></i>Register New Operator
                </a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
