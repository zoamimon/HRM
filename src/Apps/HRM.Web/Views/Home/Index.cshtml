@{
    ViewData["Title"] = "Dashboard";
}

<div class="text-center">
    <h1 class="display-4">Welcome to HRM System</h1>
    <p class="lead">Human Resource Management System</p>
</div>

<div class="row mt-5">
    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-people-fill display-1 text-primary"></i>
                <h5 class="card-title mt-3">Operators</h5>
                <p class="card-text">Manage system operators and user accounts.</p>
                <a asp-controller="Operator" asp-action="Register" class="btn btn-primary">
                    <i class="bi bi-person-plus me-1"></i>Register Operator
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-file-earmark-person display-1 text-success"></i>
                <h5 class="card-title mt-3">Employees</h5>
                <p class="card-text">Manage employee records and information.</p>
                <a href="#" class="btn btn-success disabled">
                    <i class="bi bi-people me-1"></i>Coming Soon
                </a>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <div class="card-body text-center">
                <i class="bi bi-gear-fill display-1 text-warning"></i>
                <h5 class="card-title mt-3">Settings</h5>
                <p class="card-text">Configure system settings and preferences.</p>
                <a href="#" class="btn btn-warning disabled">
                    <i class="bi bi-gear me-1"></i>Coming Soon
                </a>
            </div>
        </div>
    </div>
</div>

<div class="row mt-4">
    <div class="col-md-12">
        <div class="card">
            <div class="card-header">
                <h5 class="mb-0"><i class="bi bi-info-circle me-2"></i>User Information</h5>
            </div>
            <div class="card-body">
                <dl class="row mb-0">
                    <dt class="col-sm-3">Full Name:</dt>
                    <dd class="col-sm-9">@User.Claims.FirstOrDefault(c => c.Type == "FullName")?.Value</dd>

                    <dt class="col-sm-3">Username:</dt>
                    <dd class="col-sm-9">@User.Identity?.Name</dd>

                    <dt class="col-sm-3">Email:</dt>
                    <dd class="col-sm-9">@User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.Email)?.Value</dd>

                    <dt class="col-sm-3">User ID:</dt>
                    <dd class="col-sm-9">@User.Claims.FirstOrDefault(c => c.Type == System.Security.Claims.ClaimTypes.NameIdentifier)?.Value</dd>
                </dl>
            </div>
        </div>
    </div>
</div>
